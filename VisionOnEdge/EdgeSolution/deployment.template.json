{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "linkeriotedge": {
                "username": "$CONTAINER_REGISTRY_USERNAME_linkeriotedge",
                "password": "$CONTAINER_REGISTRY_PASSWORD_linkeriotedge",
                "address": "linkeriotedge.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "alertModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "linkeriotedge.azurecr.io/alertmanager:0.0.1",
              "createOptions": {}
            }
          },
          "visionModule": {
            "version": "1.03",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "linkeriotedge.azurecr.io/vision-on-edge:0.0.1",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "8000/tcp": [
                      {
                        "HostPort": "8002"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "alertModuleToIoTHub": "FROM /messages/modules/alertModule/outputs/* INTO $upstream",
          "visionModuleToIoTHub": "FROM /messages/modules/visionModule/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}
